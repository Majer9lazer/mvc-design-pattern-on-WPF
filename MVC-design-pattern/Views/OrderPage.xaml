<Page x:Class="MVC_design_pattern.Views.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVC_design_pattern.Views"
      xmlns:controls="http://github.com/scheshan/bootstrap"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">
    <Border  Background="Black" BorderBrush="Gray" BorderThickness="2" CornerRadius="7">
        <Grid>
            <Menu>
                <Menu.Background>
                    <ImageBrush ImageSource="../Images/Big-Juicy-Burgers.jpg" Stretch="UniformToFill" x:Name="OrderBurgerBackgroundImage"  ></ImageBrush>
                </Menu.Background>
                <MenuItem Header="Меню" Foreground="White" FontSize="19" GotFocus="GotFocusMainMenu">
                    <MenuItem Foreground="Black" Header="Показать меню" Click="ShowMenuClick" Background="White"></MenuItem>
                    <MenuItem Foreground="Black" Header="Заказать бургер"></MenuItem>
                </MenuItem>
            </Menu>
        </Grid>
    </Border>
</Page>
